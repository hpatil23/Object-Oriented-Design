<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hotel_management.Receptionist.confirm_checkOut">
   <top>
      <HBox alignment="CENTER" prefHeight="51.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Confirm Check-Out">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <bottom>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="600.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="confirm" mnemonicParsing="false" onAction="#confirm" text="Confirm Check Out" />
            <Button fx:id="close" mnemonicParsing="false" onAction="#close" text="Close" />
         </children>
      </HBox>
   </bottom>
   <center>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <ListView fx:id="allGuests" layoutX="120.0" layoutY="24.0" prefHeight="200.0" prefWidth="362.0" />
            <Label layoutX="240.0" layoutY="242.0" text="Select only one" />
         </children>
      </Pane>
   </center>
</BorderPane>
